{
  "name": "mobx-sync",
  "version": "3.0.0",
  "description": "A library to persist your mobx stores.",
  "author": "acrazing <joking.young@gmail.com>",
  "main": "dist/mobx-sync.cjs.js",
  "module": "dist/mobx-sync.esm.js",
  "types": "dist/",
  "files": [
    "assets/",
    "lib/",
    "src/"
  ],
  "sideEffects": [
    "*.css",
    "*.less",
    "*.scss"
  ],
  "scripts": {
    "clean": "rm -rf dist",
    "bundle": "rollup --config rollup.config.ts",
    "build": "run-s clean bundle",
    "test": "jest",
    "prepublishOnly": "run-s test build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/acrazing/mobx-sync.git"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^26.0.0",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "lint-staged": "^10.2.10",
    "mobx": "^5.10.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5",
    "rollup": "^2.16.1",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-sourcemaps": "^0.6.2",
    "rollup-plugin-typescript2": "^0.27.1",
    "monofile-utilities": "^4.11.1",
    "ts-jest": "^26.1.0",
    "typescript": "^3.9.5"
  },
  "dependencies": {
    "tslib": "^2.0.0"
  },
  "peerDependencies": {
    "mobx": "*"
  },
  "cliVersion": "8.4.2",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,css,less,scss,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node",
      "mjs"
    ],
    "cacheDirectory": ".cache/jest",
    "collectCoverage": false,
    "collectCoverageFrom": [
      "<rootDir>/src/**/*.{ts,tsx}",
      "!**/*.d.ts"
    ],
    "coverageDirectory": "temp/coverage",
    "globals": {
      "__DEV__": true,
      "ENV": {}
    },
    "testMatch": [
      "<rootDir>/src/**/*.spec.{ts,tsx}"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    }
  },
  "prettier": {
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "jsxSingleQuote": false,
    "trailingComma": "all",
    "bracketSpacing": true,
    "jsxBracketSameLine": false,
    "arrowParens": "always",
    "endOfLine": "lf"
  }
}
